
{
  "rules": {
    ".read": false,
    ".write": false,
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": [
        "featured",
        "stock"
      ]
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": [
        "name"
      ]
    },
    "site_settings": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "coupons": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": [
        "code",
        "createdAt",
        "is_active"
      ]
    },
    "users": {
      ".read": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      "$uid": {
        ".read": "(auth != null && $uid === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "(auth != null && $uid === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        "wishlist": {
          ".indexOn": "productId"
        },
        "addresses": {
          ".indexOn": "createdAt"
        },
        "paymentMethods": {
          ".indexOn": "createdAt"
        }
      }
    },
    "orders": {
      ".read": "(auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true) || (auth != null && query.orderByChild === 'userId' && query.equalTo === auth.uid)",
      ".indexOn": [
        "userId",
        "createdAt"
      ],
      "$orderId": {
        ".read": "(auth != null && data.child('userId').val() === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "(auth != null && !data.exists() && newData.child('userId').val() === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)"
      }
    },
    "reviews": {
      ".read": "query.orderByChild === 'productId' || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true) || (auth != null && query.orderByChild === 'userId' && query.equalTo === auth.uid)",
      ".indexOn": [
        "productId",
        "is_approved",
        "createdAt",
        "userId"
      ],
      "$reviewId": {
        ".read": "data.child('is_approved').val() === true || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true) || (auth != null && data.child('userId').val() === auth.uid)",
        ".write": "(auth != null && !data.exists() && newData.child('userId').val() === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)"
      }
    },
    "supportTickets": {
      ".read": "auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": [
        "userId",
        "createdAt"
      ],
      "$ticketId": {
        ".read": "(auth != null && data.child('userId').val() === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "(auth != null && !data.exists() && newData.child('userId').val() === auth.uid) || (auth != null && root.child('users').child(auth.uid).exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true)"
      }
    }
  }
}